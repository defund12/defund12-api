    "axios": "^0.19.2",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "express-basic-auth": "^1.2.0",
    "express-joi-validation": "^4.0.3",
    "firebase-admin": "^8.6.0",
    "firebase-functions": "^3.3.0",
    "lob": "^6.1.0",
    "lodash": "^4.17.19",
    "mailgun-js": "^0.22.0",
    "stripe": "^8.64.0"
  },
  "devDependencies": {
    "firebase-functions-test": "^0.1.6",
    "typescript": "3.8.3",
    "@types/axios": "^0.14.0",
